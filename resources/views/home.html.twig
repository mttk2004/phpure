{% extends 'layouts/app.html.twig' %}

{% block content %}
  <div class="container mx-auto py-8 px-4">
    <h2 class="text-blue-600 text-4xl font-black mb-4">{{ message }}</h2>

    <p class="text-gray-700 mb-6">This is the homepage using Twig and Tailwind CSS.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-3">Interact with Alerts</h3>
        <div class="space-y-2">
          <button onclick="showAlert('Good job!', 'You clicked the button!', 'success')"
                  class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">
            Show Success Alert
          </button>
          <button onclick="showAlert('Oops!', 'Something went wrong!', 'error')"
                  class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
            Show Error Alert
          </button>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-3">Alpine.js Modal</h3>
        <div x-data="{ open: false }">
          <!-- Nút mở modal -->
          <button @click="open = true" class="px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600">
            Open Modal
          </button>

          <!-- Modal -->
          <div
                  x-show="open"
                  x-transition
                  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50"
          >
            <div class="bg-white p-6 rounded-lg shadow-xl max-w-md mx-auto">
              <h2 class="text-2xl font-bold mb-4">This is a Modal</h2>
              <p class="text-gray-600 mb-6">You can add any content here. This modal is powered by Alpine.js.</p>

              <button
                      @click="open = false"
                      class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
